.meetInfor {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.meetInfor view {
    margin-top: 20rpx;
}

.meetInfor .title {
    width: 490rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 30rpx;
    font-weight: bold;
    margin-top: 20rpx;
}

.meetInfor .address {
    position: absolute;
}

.meetInfor .time {
    position: absolute;
    right: 10%;
}
